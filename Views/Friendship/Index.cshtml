@model List<numberFightMayis.Models.ApplicationUser>

@{
    ViewData["Title"] = "Arkadaşlarım";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Arkadaşlarım</h2>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" id="friendSearch" class="form-control" placeholder="Arkadaş ara...">
                <button class="btn btn-outline-primary" type="button" id="searchButton">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <div id="searchResults" class="mb-4" style="display: none;">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Arama Sonuçları</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="searchResultsBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz arkadaşınız bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var friend in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="@friend.ProfileImageUrl" alt="@friend.UserName" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            <h5 class="card-title">@friend.UserName</h5>
                            <div class="card-text">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Toplam Oyun:</strong><br>
                                        <span class="badge bg-secondary">@friend.TotalGames</span>
                                    </div>
                                    <div class="col-6">
                                        <strong>Altın:</strong><br>
                                        <span class="badge bg-warning text-dark">@friend.Gold</span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <strong>G:</strong><br>
                                        <span class="badge bg-success">@friend.Wins</span>
                                    </div>
                                    <div class="col-4">
                                        <strong>M:</strong><br>
                                        <span class="badge bg-danger">@friend.Losses</span>
                                    </div>
                                    <div class="col-4">
                                        <strong>B:</strong><br>
                                        <span class="badge bg-info">@friend.Draws</span>
                                    </div>
                                </div>
                            </div>
                            <a asp-action="FriendStats" asp-route-id="@friend.Id" class="btn btn-primary mt-3">
                                <i class="fas fa-chart-bar me-1"></i>Detaylı İstatistikler
                            </a>
                            <button class="btn btn-success mt-2 send-friend-match" data-user-id="@friend.Id">
                                <i class="fas fa-gamepad me-1"></i>Dostluk Maçı
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let searchTimeout;
            
            $("#friendSearch").on("input", function() {
                clearTimeout(searchTimeout);
                const query = $(this).val();
                
                if (query.length < 2) {
                    $("#searchResults").hide();
                    return;
                }
                
                searchTimeout = setTimeout(function() {
                    $.get("/Friendship/Search", { query: query }, function(response) {
                        const results = response.users;
                        if (results.length === 0) {
                            $("#searchResultsBody").html('<tr><td colspan="2" class="text-center">Kullanıcı bulunamadı</td></tr>');
                        } else {
                            const resultsHtml = results.map(user => `
                                <tr>
                                    <td>
                                        <i class="fas fa-user me-2"></i>${user.userName}
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-primary send-request" data-user-id="${user.id}">
                                            <i class="fas fa-user-plus me-1"></i> Arkadaş Ekle
                                        </button>
                                    </td>
                                </tr>
                            `).join("");
                            $("#searchResultsBody").html(resultsHtml);
                        }
                        $("#searchResults").show();
                    });
                }, 300);
            });
            
            $(document).on("click", ".send-request", function() {
                const userId = $(this).data("user-id");
                const button = $(this);
                
                $.post("/Friendship/SendRequest", { userId: userId }, function() {
                    button.prop("disabled", true)
                        .html('<i class="fas fa-check me-1"></i> İstek Gönderildi')
                        .removeClass('btn-primary')
                        .addClass('btn-success');
                }).fail(function() {
                    alert("Arkadaşlık isteği gönderilirken bir hata oluştu.");
                });
            });
            
            $(document).on("click", function(e) {
                if (!$(e.target).closest("#friendSearch, #searchResults").length) {
                    $("#searchResults").hide();
                }
            });

            $(document).on("click", ".send-friend-match", function() {
                const userId = $(this).data("user-id");
                const button = $(this);
                
                $.post("/Friendship/SendFriendMatchRequest", { userId: userId })
                    .done(function(response) {
                        if (response.success) {
                            button.prop("disabled", true)
                                .html('<i class="fas fa-clock me-1"></i> İstek Gönderildi')
                                .removeClass('btn-success')
                                .addClass('btn-secondary');
                        } else {
                            alert(response.message || "Dostluk maçı isteği gönderilirken bir hata oluştu.");
                        }
                    })
                    .fail(function(xhr) {
                        let errorMessage = "Dostluk maçı isteği gönderilirken bir hata oluştu.";
                        try {
                            const response = JSON.parse(xhr.responseText);
                            if (response.message) {
                                errorMessage = response.message;
                            }
                        } catch (e) {
                            // JSON parse hatası durumunda varsayılan mesajı kullan
                        }
                        alert(errorMessage);
                    });
            });
        });
    </script>
} 