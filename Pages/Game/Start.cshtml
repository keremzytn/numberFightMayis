@page
@model numberFightMayis.Pages.Game.StartModel
@{
    ViewData["Title"] = "Oyunu Başlat";
}

<div class="container">
    <div class="game-start-section">
        <h1 class="game-title">Oyunu Başlat</h1>
        <div class="game-options">
            <div class="option-card">
                <h2>Hızlı Oyun</h2>
                <p>Rastgele bir oyuncuyla hemen oyuna başlayın</p>
                <button class="btn btn-primary" onclick="startQuickGame()">Hızlı Oyun</button>
            </div>
            <div class="option-card">
                <h2>Arkadaşla Oyna</h2>
                <p>Arkadaşınızla özel bir oyun başlatın</p>
                <button class="btn btn-primary" onclick="startFriendGame()">Arkadaşla Oyna</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function startQuickGame() {
            // Hızlı oyun başlatma mantığı
            window.location.href = '/Game/Play?mode=quick';
        }

        function startFriendGame() {
            // Arkadaşla oyun başlatma mantığı
            window.location.href = '/Game/Play?mode=friend';
        }
    </script>
} 